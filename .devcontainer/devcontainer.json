{
  "name": "Rust Codespace",
  "image": "mcr.microsoft.com/devcontainers/rust",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "postCreateCommand": "rustup default stable",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "matklad.rust-analyzer",
        "serayuzgur.crates"
      ]
    }
  }
}
